        <div class="form-top-left">
            <h4>Đăng nhập hệ thống quản trị</h4>
            <p>vui lòng nhập user name và password:</p>
            <h4 style="color:red;text-align:center">@ViewBag.Thongbao</h4>
        </div>
        <div class="form-top-right">
            <i class="fa fa-key"></i>
        </div>
        <div class="form-bottom">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label class="sr-only"for="form-username">Username:</label>
                    <input type="text" name="username" placeholder="Username..." class="form-username form-control" id="form-username">
                    @ViewData["Loi1"]
                </div>
                <div class="form-group">
                    <label class="sr-only"for="form-password">Password:</label>
                    <input type="password" name="password" placeholder="Password..." class="form-password form-control" id="form-password">
                    @ViewData["Loi2"]
                </div>
                <button type="submit" class="btn">Đăng Nhập</button>
            }

        </div>




        <footer>
            <label><input type="checkbox" tabindex="3">Keep me logged in</label>
            <input type="submit" class="btnLogin" value="Login" tabindex="4">
        </footer>
    </form>
    <footer id="main">
        <a href="http://wwww.cssjunction.com">Simple Login Form (HTML5/CSS3 Coded) by CSS Junction</a> | <a href="http://www.premiumpixels.com">PSD by Premium Pixels</a>
    </footer>
</body>
